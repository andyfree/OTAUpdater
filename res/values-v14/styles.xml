<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBar.Solid.Dark" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_dark</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_dark</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_dark</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Dark</item>
    </style>
    
    <style name="ActionBar.Solid.Light" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_light</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_light</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_light</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Light</item>
    </style>
    
    <style name="ActionBar.Solid.LightDarkAction" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_dark</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_dark</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_dark</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Dark</item>
    </style>

    <style name="ActionBar.Transparent.Dark" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_dark</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Dark</item>
    </style>
    
    <style name="ActionBar.Transparent.Light" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_light</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Light</item>
    </style>

    <style name="PopupMenu.Dark" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>	
    </style>
    
    <style name="PopupMenu.Light" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_light</item>	
    </style>

    <style name="DropDownListView.Dark" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_dark</item>
    </style>
    
    <style name="DropDownListView.Light" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_light</item>
    </style>

    <style name="ActionBarTabStyle.Dark" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_dark</item>
    </style>
    
    <style name="ActionBarTabStyle.Light" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_light</item>
    </style>
    

    <style name="DropDownNav.Dark" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_dark</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_dark</item>
    </style>
    
    <style name="DropDownNav.Light" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_light</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_light</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_light</item>
    </style>
    
    <style name="ProgressBar.Dark" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_dark</item>
    </style>
    
    <style name="ProgressBar.Light" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_light</item>
    </style>
    
    <style name="ActionButton.CloseMode.Dark" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_dark</item>
    </style>
    
    <style name="ActionButton.CloseMode.Light" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_light</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Dark.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Dark</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Dark</item>
    </style>
    
     <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Light.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Light</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Light</item>
    </style>
</resources>
